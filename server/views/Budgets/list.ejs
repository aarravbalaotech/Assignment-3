<%- include('../partials/header') %>

<div class="dashboard-container">
  <div class="container">
    <div class="row mb-4">
      <div class="col-md-6">
        <h2><i class="fas fa-wallet"></i> Budgets</h2>
        <p class="text-muted">Manage your spending limits</p>
      </div>
      <div class="col-md-6 text-end">
        <a href="/budgets/add" class="btn btn-primary btn-lg">
          <i class="fas fa-plus"></i> Add New Budget
        </a>
      </div>
    </div>

    <% if(BudgetList && BudgetList.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Category</th>
              <th>Amount</th>
              <th>Period</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% BudgetList.forEach(budget => { %>
              <tr>
                <td><strong><%= budget.title %></strong></td>
                <td><span class="badge bg-info"><%= budget.category %></span></td>
                <td><strong>$<%= parseFloat(budget.amount).toFixed(2) %></strong></td>
                <td><span class="badge bg-secondary"><%= budget.period %></span></td>
                <td><%= new Date(budget.createdAt).toLocaleDateString() %></td>
                <td>
                  <a href="/budgets/edit/<%= budget._id %>" class="btn btn-sm btn-warning" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/budgets/delete/<%= budget._id %>" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Delete this budget?')">
                    <i class="fas fa-trash"></i>
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No Budgets Yet</h3>
        <p>Start by creating your first budget to manage your spending.</p>
        <a href="/budgets/add" class="btn btn-primary">Create Budget</a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>