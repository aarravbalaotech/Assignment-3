<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/Content/app.css' />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/@fortawesome/fontawesome-free/css/all.min.css">
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Student Finance Helper</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <% if(title=="Home") { %>
                <a class="nav-link active" aria-current="page" href="/home"><i class="fa-solid fa-lg fa-house"></i> Home</a>
              <% } else { %>
                <a class="nav-link" aria-current="page" href="/home"><i class="fa-solid fa-lg fa-house"></i> Home</a>
              <% } %>
            </li>
            <li class="nav-item">
              <% if(title=="Dashboard") { %>
                <a class="nav-link active" aria-current="page" href="/dashboard"><i class="fa-solid fa-lg fa-tachometer-alt"></i> Dashboard</a>
              <% } else { %>
                <a class="nav-link" aria-current="page" href="/dashboard"><i class="fa-solid fa-lg fa-tachometer-alt"></i> Dashboard</a>
              <% } %>
            </li>
            <li class="nav-item">
              <% if (typeof displayName == 'string' && displayName) { %>
                <% if(title=="Budgets") { %>
                  <a class="nav-link active" aria-current="page" href="/budgets"><i class="fa-solid fa-lg fa-wallet"></i> Budgets</a>
                <% } else { %>
                  <a class="nav-link" aria-current="page" href="/budgets"><i class="fa-solid fa-lg fa-wallet"></i> Budgets</a>
                <% } %>
              <% } else { %>
                <a class="nav-link" aria-current="page" href="/login"><i class="fa-solid fa-lg fa-wallet"></i> Budgets <small class="text-warning">(Log in to access)</small></a>
              <% } %>
            </li>
            <li class="nav-item">
              <% if (typeof displayName == 'string' && displayName) { %>
                <% if(title=="Expenses") { %>
                  <a class="nav-link active" aria-current="page" href="/expenses"><i class="fa-solid fa-lg fa-credit-card"></i> Expenses</a>
                <% } else { %>
                  <a class="nav-link" aria-current="page" href="/expenses"><i class="fa-solid fa-lg fa-credit-card"></i> Expenses</a>
                <% } %>
              <% } else { %>
                <a class="nav-link" aria-current="page" href="/login"><i class="fa-solid fa-lg fa-credit-card"></i> Expenses <small class="text-warning">(Log in to access)</small></a>
              <% } %>
            </li>
            <li class="nav-item">
              <% if (typeof displayName == 'string' && displayName) { %>
                <% if(title=="Goals") { %>
                  <a class="nav-link active" aria-current="page" href="/goals"><i class="fa-solid fa-lg fa-target"></i> Goals</a>
                <% } else { %>
                  <a class="nav-link" aria-current="page" href="/goals"><i class="fa-solid fa-lg fa-target"></i> Goals</a>
                <% } %>
              <% } else { %>
                <a class="nav-link" aria-current="page" href="/login"><i class="fa-solid fa-lg fa-target"></i> Goals <small class="text-warning">(Log in to access)</small></a>
              <% } %>
            </li>
            <% if (typeof displayName == 'string' && displayName) { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-lg fa-user"></i> <%= displayName %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                  <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#" onclick="document.getElementById('logoutFormHidden').submit(); return false;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a href="/login" class="nav-link">
                  <i class="fas fa-lg fa-sign-in-alt"></i> Login
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Hidden logout form for POST-based logout (CSRF-safe) -->
    <form id="logoutFormHidden" method="POST" action="/auth/logout" style="display:none;"></form>
    <script>
      // Client-side guard: if a user clicks a protected nav item while not authenticated,
      // redirect immediately to the login page for a clearer UX.
      (function(){
        var isAuth = <%= JSON.stringify(typeof isAuthenticated !== 'undefined' ? isAuthenticated : false) %>;
        document.addEventListener('DOMContentLoaded', function(){
          // select links that go to protected areas
          var protectedSelectors = ['a[href="/dashboard"]', 'a[href="/budgets"]', 'a[href="/expenses"]', 'a[href="/goals"]'];
          protectedSelectors.forEach(function(sel){
            document.querySelectorAll(sel).forEach(function(a){
              a.addEventListener('click', function(e){
                if(!isAuth){
                  e.preventDefault();
                  window.location.href = '/login';
                }
              });
            });
          });
        });
      })();
    </script>
