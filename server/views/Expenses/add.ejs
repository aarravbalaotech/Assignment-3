<%- include('../partials/header') %>

<div class="dashboard-container">
  <div class="container">
    <div class="card" style="max-width: 600px; margin: 0 auto;">
      <div class="card-header">
        <i class="fas fa-plus"></i> Log New Expense
      </div>
      <div class="card-body">
        <form method="POST" action="/expenses/add">
          <div class="mb-3">
            <label for="title" class="form-label">Description</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="e.g., Grocery Shopping" required>
          </div>

          <div class="mb-3">
            <label for="amount" class="form-label">Amount ($)</label>
            <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0" placeholder="0.00" required>
          </div>

          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category" required>
              <option value="">-- Select a category --</option>
              <option value="Groceries">Groceries</option>
              <option value="Transport">Transport</option>
              <option value="Entertainment">Entertainment</option>
              <option value="Utilities">Utilities</option>
              <option value="Dining">Dining</option>
              <option value="Shopping">Shopping</option>
              <option value="Health">Health</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="date" class="form-label">Expense Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
          </div>

          <div class="mb-3">
            <label for="receiptUrl" class="form-label">Receipt URL (optional)</label>
            <input type="url" class="form-control" id="receiptUrl" name="receiptUrl" placeholder="https://example.com/receipt.jpg">
          </div>

          <div class="d-grid gap-2 d-sm-flex justify-content-sm-end">
            <a href="/expenses" class="btn btn-secondary btn-lg">
              <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn btn-danger btn-lg">
              <i class="fas fa-check"></i> Log Expense
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
