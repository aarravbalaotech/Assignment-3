<%- include('../partials/header') %>

<div class="dashboard-container">
  <div class="container">
    <div class="row mb-4">
      <div class="col-md-6">
        <h2><i class="fas fa-credit-card"></i> Expenses</h2>
        <p class="text-muted">Track your spending and manage your finances</p>
      </div>
      <div class="col-md-6 text-end">
        <a href="/expenses/add" class="btn btn-danger btn-lg">
          <i class="fas fa-plus"></i> Add New Expense
        </a>
      </div>
    </div>

    <% if(ExpenseList && ExpenseList.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description</th>
              <th>Amount</th>
              <th>Category</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% ExpenseList.forEach(expense => { %>
              <tr>
                <td><strong><%= expense.title %></strong></td>
                <td><strong style="color: #e74c3c;">$<%= parseFloat(expense.amount).toFixed(2) %></strong></td>
                <td><span class="badge bg-danger"><%= expense.category %></span></td>
                <td><%= new Date(expense.date).toLocaleDateString() %></td>
                <td>
                  <a href="/expenses/edit/<%= expense._id %>" class="btn btn-sm btn-warning" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/expenses/delete/<%= expense._id %>" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Delete this expense?')">
                    <i class="fas fa-trash"></i>
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No Expenses Yet</h3>
        <p>Start tracking your spending by adding your first expense.</p>
        <a href="/expenses/add" class="btn btn-danger">Add Expense</a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>